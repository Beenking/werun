.message-item{
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #ececec
}

.index{
  font-size: 33rpx;
  margin: 16rpx;
  align-self: center;
}

.avator{
  width: 96rpx;
  height: 96rpx;
  margin: 16rpx
}

.name{
  font-size: 33rpx;
  margin-left: 10rpx;
  align-self: center;
  flex: 1;
}

.steps{
  font-size: 50rpx;
  font-family: Arial, Helvetica, sans-serif;
  color: orange;
  align-self: center;
}

.upvote-group{
  display: flex;
  flex-direction: column;
